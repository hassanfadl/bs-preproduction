                                                        <t t-if="foo == False">
                                                        <t t-if="m.attribute_id.check_report_values(doc.partner_id, 'Absolute MOQ with surcharge')">
                                                            <span t-field="m.name"/>
                                                            <t t-set="foo" t-value="True"/>
                                                        </t>
                                                        </t>
                                                    </t>
                                                    <br/>
                                                    <span t-if="l.name=='Leadtime with stock'"/>
                                                    Leadtime with stock :
                                                    <t t-foreach="l.product_id.product_template_attribute_value_ids" t-as="m">
                                                        <t t-if="m.attribute_id.check_report_values(doc.partner_id, 'Leadtime with stock')">
                                                            <span t-field="m.name"/>
                                                        </t>
                                                    </t>
                                                    <br/>
                                                    <span t-if="l.name=='Leadtime with greige'"/>Leadtime with
                                                    greige :
                                                    <t t-foreach="l.product_id.product_template_attribute_value_ids" t-as="m">
                                                        <t t-if="m.attribute_id.check_report_values(doc.partner_id, 'Leadtime with greige')">
                                                            <span t-field="m.name"/>
                                                        </t>
                                                    </t>
                                                    <br/>
                                                    <span t-if="l.name=='Tolerence acceptance'"/>Tolerence
                                                    acceptance :
                                                    <span t-field="l.tolerance_rate"/>
                                                    <br/>
                                                    </t>
                                                </div>
                                            </div>
                                        </th>
                                        <th style="padding-bottom: 0;" colspan="1">
                                            <div>
                                                <div>
                                                    <br/>
                                                    <br/>
                                                    <t t-if="l.product_id.type != 'service'">
                                                    <span t-if="l.name=='Cuttable width'"/>
                                                    Cuttable Width :
                                                    <t t-foreach="l.product_id.product_template_attribute_value_ids" t-as="m">
                                                        <t t-if="m.attribute_id.check_report_values(doc.partner_id, 'Cuttable width')">
                                                            <span t-field="m.name"/>
                                                        </t>
                                                    </t>
                                                    <br/>
                                                    <span t-if="l.name=='Pattern Repeat'"/>
                                                    Pattern Repeat :
                                                    <t t-foreach="l.product_id.product_template_attribute_value_ids" t-as="m">
                                                        <t t-if="m.attribute_id.check_report_values(doc.partner_id, 'Pattern Repeat')">
                                                            <span t-field="m.name" style="text-align: right"/>
                                                        </t>
                                                    </t>
                                                    <br/>
                                                    <span t-if="l.name=='MCQ'"/>
                                                    MCQ :
                                                    <t t-foreach="l.product_id.product_template_attribute_value_ids" t-as="m">
                                                        <t t-if="m.attribute_id.check_report_values(doc.partner_id, 'MCQ')">
                                                            <span t-field="m.name"/>
                                                        </t>
                                                    </t>
                                                    <br/>
                                                    <span t-if="l.name=='Absolute MCQ with surcharge'"/>
                                                    Absolute MCQ with surcharge :
                                                    <!--here-->
                                                    <t t-set="foo" t-value="0"/>
                                                    <t t-foreach="l.product_id.product_template_attribute_value_ids" t-as="m">
                                                        <t t-if="m.attribute_id.check_report_values(doc.partner_id, 'Absolute MCQ with surcharge')">

                                                          <span t-field="m.name"/>
                                                        </t>
                                                    </t>
                                                    <br/>
                                                    <span t-if="l.name=='Leadtime without stock'"/>
                                                    Leadtime without stock :
                                                    <t t-set="foo" t-value="False"/>
                                                      <t t-foreach="l.product_id.product_template_attribute_value_ids" t-as="m">
                                                          <t t-if="foo == False">
                                                          <t t-if="m.attribute_id.check_report_values(doc.partner_id, 'Leadtime without stock')">
                                                              <span t-field="m.name"/>
                                                              <t t-set="foo" t-value="True"/>
                                                          </t>
                                                          </t>
        
                                                    </t>
                                                    <br/>
                                                    <span t-if="l.name=='Leadtime without greige'"/>
                                                    Leadtime without greige :
                                                    <t t-foreach="l.product_id.product_template_attribute_value_ids" t-as="m">
                                                        <t t-if="m.attribute_id.check_report_values(doc.partner_id, 'Leadtime without greige')">
                                                            <span t-field="m.name"/>
                                                        </t>
                                                    </t>
                                                    <br/>
                                                    </t>

                                                </div>
                                            </div>
                                        </th>
                                    </tr>
                                    <tr style="line-height: 0.5;">
                                        <th style="border-top: 0;"/>
                                        <th style="border-top: 0;" colspan="3">
                                            <span t-if="l.name=='Composition'"/>
                                                Composition :
                                            <t t-foreach="l.product_id.product_template_attribute_value_ids" t-as="m">
                                                <t t-if="m.attribute_id.check_report_values(doc.partner_id, 'Composition')">
                                                    <span t-field="m.name"/>
                                                </t>
                                            </t>
                                        </th>
                                    </tr>
                                </t>
                            </t>
                          
                        </tbody>
                    </table>
                    <br/>

                    <div t-if="doc.state in ['draft','sent']">
                      <p style="page-break-after: always;"/>  
                    </div>
                    
                    <t t-if="doc.state not in ['draft','sent']">
                        <div name="total">
                            <div class="col-xs-4 pull-right">
                                <table class="table table-condensed">
                                    <tr class="border-black">
                                        <td>
                                            <strong>SubTotal</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="doc.amount_untaxed" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;doc.pricelist_id.currency_id&quot;}"/>
