                                                    <t t-foreach="l.product_id.product_template_attribute_value_ids" t-as="m">
                                                        <t t-if="m.attribute_id.check_report_values(doc.partner_id, 'Width')">
                                                            <span t-field="m.name"/>
                                                        </t>
                                                    </t>
                                                    <br/>
                                                    <span t-if="l.name=='Weight'"/>
                                                    Weight :
                                                    <t t-foreach="l.product_id.product_template_attribute_value_ids" t-as="m">
                                                        <t t-if="m.attribute_id.check_report_values(doc.partner_id, 'Weight')">
                                                            <span t-field="m.name"/>
                                                        </t>
                                                    </t>
                                                    <br/>
                                                    <span t-if="l.name=='MOQ'"/>
                                                    MOQ :
                                                    <t t-foreach="l.product_id.product_template_attribute_value_ids" t-as="m">
                                                        <t t-if="m.attribute_id.check_report_values(doc.partner_id, 'MOQ')">
                                                            <span t-field="m.name"/>
                                                        </t>
                                                    </t>
                                                    <br/>
