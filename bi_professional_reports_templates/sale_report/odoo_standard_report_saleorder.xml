                                    <td>
                                        <span t-esc="l_index+1"/>
                                    </td>
                                    <td>
                                        <span t-if="doc.state in ['draft','sent']">
                                            <span t-field="l.name"/>
                                        </span>
                                        <span t-if="doc.state not in ['draft','sent']">
                                            <span t-field="l.name"/>
