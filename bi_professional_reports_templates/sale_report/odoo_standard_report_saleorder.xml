<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="odoo_std_report_saleorder_document">
            <t t-if="o and 'company_id' in o">
                <t t-set="company_id" t-value="o.company_id"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company_id" t-value="res_company"/>
            </t>
            <t t-call="bi_professional_reports_templates.external_layout_standard_inherited">
                <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})"/>
                <t t-set="company" t-value="doc.company_id"/>
                <div class="page">
                    <!--delete-->
                    <div class="header">
                        <div class="row mt32 mb32">
                            <div class="col-6" style="font:15px lucida-console,sans-serif !important;">
                                <span t-field="doc.company_id.partner_id"/>
                                <br/>
                                <span t-field="doc.company_id.partner_id.street"/>
                                <br/>
                                <span t-field="doc.company_id.partner_id.street2"/>
                                <br/>
                                <span t-field="doc.company_id.partner_id.city"/>
                                <br/>
                                <span t-field="doc.company_id.partner_id.country_id"/>
                                <br/>
                                <span t-field="doc.company_id.partner_id.phone"/>
                                <br/>
                            </div>
                            <div class="col-6 text-right">
                                <img t-if="doc.company_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(doc.company_id.logo)" style="max-height: 90px;"/>
                            </div>
                        </div>
                        <div style="background-color: #DCDCDC;">
                            <div class="oe_structure"/>
                            <div style="border-bottom: 1px solid grey;"/>
                            <div style="background-color:#DCDCDC;">
                                <div style="float:left;">
                                    To :
                                    <br/>
                                    <span style="float: left;">
                                        <t t-if="doc.partner_id.parent_id">
                                            <span t-field="doc.partner_id.parent_id"/>,
                                        </t>
                                        <t t-esc="doc.partner_id.name"/>
                                    </span>
                                    <br/>
                                    <span t-field="doc.partner_id.street"/>
                                    <br/>
                                    <span t-field="doc.partner_id.street2"/>
                                    <br/>
                                    <span t-field="doc.partner_id.city"/>
                                    <br/>
                                    <span t-field="doc.partner_id.country_id"/>
                                </div>
                                <div style="float:right;border:1px solid grey;margin-right:30px;margin-top:10px;width:350px;border-bottom: 1px solid grey;">
                                    <div style="background-color:#6495ED !important;color:#FFF !important;">
                                        <span t-if="doc.state  in ['draft','sent']">
                                            Quotation:
                                            <span style="padding-left:30px; padding-right: 5px;" class="float-right">
                                                <t t-esc="doc.name"/>
                                            </span>&amp;nbsp;
                                        </span>
                                        <span t-if="doc.state not in ['draft','sent']">
                                            Sales Order:
                                            <span style="padding-left:30px; padding-right: 5px;" class="float-right">
                                                <t t-esc="doc.name"/>
                                            </span>&amp;nbsp;
                                        </span>
                                    </div>
                                    Date:
                                    <span style="padding-left:60px; padding-right: 5px;" class="float-right">
                                        <t t-esc="doc.date_order.strftime('%d/%m/%Y')"/>
                                    </span>
      
                                    <br/>
                                    Sales contact:
                                    <span style="padding-left:5px; padding-right: 5px;" class="float-right">
                                        <t t-esc="doc.user_id.name"/>
                                    </span>
                                    <br/>
                                    Version:
                                    <span style="padding-left:60px; padding-right: 5px;" class="float-right">
                                        <t t-esc="doc.version"/>
                                    </span>
                                    <br/>
                                    Page:
                                    <span class="float-right" style="padding-right: 5px;">
                                        <span class="page"/>
                                        /
                                        <span class="topage"/>
                                    </span>
                                    <br/> 
                                </div>
                              <br/>
                              <br/>
                              <br/>
                              <br/>
                              <br/>
                              <br/>
                          </div>

                        </div>
                    </div>
                    <br/>
                    <h2 style="text-align: center; font-color: black;">
                        <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                            <span t-if="doc.state not in ['draft','sent']">SALES ORDER</span>
                            <span t-if="doc.state in ['draft','sent']">QUOTATION</span>
                        </t>
                        <t t-if="env.context.get('proforma', False) or is_pro_forma">
                            <span>Pro-Forma Invoice</span>
                        </t>
                    </h2>
                    <br/>
