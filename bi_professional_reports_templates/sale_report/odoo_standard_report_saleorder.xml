                                            <span t-field="l.price_subtotal" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <t t-if="doc.state in ['draft','sent'] ">
                                <t t-foreach="doc.order_line" t-as="l">
                                    <tr>
                                        <th style="margin-right:15px; padding-bottom: 0;">
                                            <t t-if="l.product_id.type != 'service'">
                                            <span t-esc="l_index+1"/>
                                            </t>
                                        </th>
                                        <th style="padding-bottom: 0;">
                                            <h4>
                                                <t t-if="l.product_id.type != 'service'">
                                                <span t-field="l.name" style="background-color:#6495ED"/>
                                                </t>
                                            </h4>
                                            <div>
                                                <div style="float:left;">
                                                    <t t-if="l.product_id.type != 'service'">
                                                    <span t-if="l.name=='Width'"/>
