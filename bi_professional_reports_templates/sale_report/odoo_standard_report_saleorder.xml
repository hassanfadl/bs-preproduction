                                    <div class="col-xs-6">
                                        <strong>Bank Account Details</strong>
                                        <br/>
                                        <span>Payment Method:</span>
                                        <span/>
                                        <br/>
                                        <span>Advising Bank:</span>
                                        <span t-if="doc.company_id.partner_id.bank_ids" t-field="doc.company_id.partner_id.bank_ids[0].bank_id.name"/>
                                        <br/>
                                        <span>Account Name :</span>
                                        <span t-if="doc.company_id.partner_id.bank_ids and doc.company_id.partner_id.bank_ids[0].acc_holder_name" t-field="doc.company_id.partner_id.bank_ids[0].acc_holder_name"/>
                                        <br/>
                                        <span>Account No :</span>
                                        <span t-if="doc.company_id.partner_id.bank_ids and doc.company_id.partner_id.bank_ids[0].acc_number" t-field="doc.company_id.partner_id.bank_ids[0].acc_number"/>
                                        <br/>
                                        <span>Bank Address :</span>
                                        <span t-if="doc.company_id.partner_id.bank_ids and doc.company_id.partner_id.bank_ids[0].branch_name" t-field="doc.company_id.partner_id.bank_ids[0].branch_name"/>
                                        <span t-if="doc.company_id.partner_id.bank_ids and doc.company_id.partner_id.bank_ids[0].street" t-field="doc.company_id.partner_id.bank_ids[0].street"/>
                                        <span t-if="doc.company_id.partner_id.bank_ids and doc.company_id.partner_id.bank_ids[0].street2" t-field="doc.company_id.partner_id.bank_ids[0].street2"/>
                                        <span t-if="doc.company_id.partner_id.bank_ids and doc.company_id.partner_id.bank_ids[0].city" t-field="doc.company_id.partner_id.bank_ids[0].city"/>
                                        <span t-if="doc.company_id.partner_id.bank_ids and doc.company_id.partner_id.bank_ids[0].zip" t-field="doc.company_id.partner_id.bank_ids[0].zip"/>
                                        <span t-if="doc.company_id.partner_id.bank_ids and doc.company_id.partner_id.bank_ids[0].state_id" t-field="doc.company_id.partner_id.bank_ids[0].state_id"/>
                                        <span t-if="doc.company_id.partner_id.bank_ids and doc.company_id.partner_id.bank_ids[0].country_id" t-field="doc.company_id.partner_id.bank_ids[0].country_id"/>
                                        <br/>
                                        <span>Swift:</span>
                                        <span t-if="doc.company_id.partner_id.bank_ids and doc.company_id.partner_id.bank_ids[0].swift_code" t-field="doc.company_id.partner_id.bank_ids[0].swift_code"/>
                                        <br/>
                                    </div>
                                </div>
                            </span>
                        </t>
                    </div>
                    <span t-if="doc.state not in ['draft','sent']">
                        <div t-if="doc.signature" class="mt32 ml64 mr4" name="signature">
                            <div class="offset-8">
                                <strong>Signature &amp; Company chop</strong>
                            </div>
                            <div class="offset-8">
                                <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                            </div>
                        </div>
                    </span>
                </div>
            </t>
        </template>
    </data>
</odoo>
